<Window x:Class="QUIZWPFKLASA3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QUIZWPFKLASA3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock x:Name="QuestionText" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
        <ListBox x:Name="AnswerList" Margin="1" SelectionMode="Single"/>
        <Button Content="Sprawdź" Click="CheckAnswer_Click" Margin="0,10"/>
        <Button Content="Kolejne pytanie" Click="NextAnswer_Click" Margin="0,10"/>
        <TextBlock x:Name="ResultText" FontWeight="Bold" Foreground="Green"/>
    </StackPanel>
</Window>
